<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <declare-styleable name="EmptyLayout">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="comEmptyText" format="reference|string" />
        <attr name="comEmptyDrawable" format="reference" />
        <attr name="textMarginTop" format="integer" />
        <attr name="imageMarginBottom" format="integer" />
        <attr name="imageWidth" format="dimension" />
        <attr name="imageHeight" format="dimension" />
        <attr name="imageTint" format="color" />
    </declare-styleable>

    <declare-styleable name="SwipeRecyclerLayout" parent="EmptyLayout">
        <attr name="needRefresh" format="boolean" />
        <attr name="needLoadMore" format="boolean" />
        <attr name="loadMoreLayout" format="string" />

    </declare-styleable>

    <declare-styleable name="ArcProgressBar">
        <attr name="arcDistance" format="integer" />
        <attr name="arcBgColor" format="color" />
        <attr name="fillingColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="arcWidth" format="float" />
        <attr name="lineDistance" format="integer" />
        <attr name="progressMax" format="integer" />
        <attr name="progressTextSize" format="integer" />
        <attr name="iconRes" format="reference" />
    </declare-styleable>
    
</resources>